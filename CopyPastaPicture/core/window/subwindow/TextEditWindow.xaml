<Window x:Class="CopyPastaPicture.core.window.subwindow.TextEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CopyPastaPicture.core.window.subwindow"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="TextEditWindow" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="EditText" Text="" MinHeight="50" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="SaveButton" Content="" Click="SaveButton_OnClick"/>
                <Button x:Name="CancelButton" Content="" Click="CancelButton_OnClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
